<h2>Edit Movie</h2>
<form action="/movies/{{movie.id}}/edit" method="post">

    <input type="text" name="title" value="{{movie.title}}"/>

    <input type="text" name="genre"value="{{movie.genre}}"/>/>

    <input type="text" name="plot"value="{{movie.plot}}"/>/>

    <select name="cast" multiple> {{!-- multiple select --}}
        {{#each celebrities}} {{!-- running into res.render('movies/new-movie', {celebrities}); --}}
        <option value="{{this.id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Create</button>
    
</form>